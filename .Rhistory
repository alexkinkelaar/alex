library(alex)
mtcars %>% ggplot(aes(x = hp, y = mpg, color = as.factor(cyl))) +
geom_line(size = 1.5, alpha = 0.5) +
scale_color_alex() +
theme_alex() +
xlab("Horsepower") +
ylab("Miles per Gallon") +
labs(
title = "Miles per Gallon vs Horsepower"
)
